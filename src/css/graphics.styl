/* Graphics Page */
.graphics-body
	background-color light_gray

.graphics-nav
	background-color med_light_gray
	margin-top 66px
	text-align center

	.graphics-btn
		color darken(med_light_gray, 40%)
		display inline-block
		padding 10px 15px

		&:hover
			cursor pointer
			background-color darken(med_light_gray, 10%)

		&.selected
			background-color darken(med_light_gray, 30%)
			color light_gray

.graphics
	
	.active-content
		display block

	.ray-page
	.bez-page
	.fluid-page 
		display none
