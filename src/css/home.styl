/* Home Page Styles */
.home
	background-color dark_blue

	.block-line
		background-color darken(dark_blue, 25%)

	.view
		color lighten(light_blue, 35%)
		font-size 1.4em
		padding-top 100px
		text-align center

		a
			color darken(dark_blue, 25%)

			&:hover
				color darken(dark_blue, 15%)

	h1.hi
		color darken(dark_blue, 25%)
		font-weight bold
		font-size 5em
		margin-bottom 11px
		margin-left -5px
		padding-top 55px

	.summary
		font-weight normal
		text-align center

	.zack
		font-size 9em
		line-height 1em
		letter-spacing 3px

	.extra-space
		letter-spacing 12px

	.home-left
		text-align right
		padding 15px
		padding-top 60px

	.home-right
		text-align left
		padding 15px
		padding-top 60px
