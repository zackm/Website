/* Work Page Styles */
.work
	background-color blue_gray
	padding-top 100px // need to add more here

	h3
		margin-bottom 10px
		font-size 21px
		font-weight 200
		line-height 30px

	a
		i
			padding-right 4px

	.work-text-light
		background-color med_light_gray
		color dark_blue_gray
		padding 7px 15px 10px 25px

		.btn-custom
			background-color dark_blue_gray
			color light_gray

			&:hover
				background-color lighten(dark_blue_gray, 10%)
				color lighten(light_gray, 20%)

	.work-text-dark
		background-color dark_blue_gray
		color light_gray
		padding 7px 15px 10px 25px

		.btn-custom
			background-color light_gray
			color dark_blue_gray

			&:hover
				background-color darken(light_gray, 20%)
				color darken(dark_blue_gray, 20%)

	#left-block
		margin-right 0px

	#right-block
		margin-left 0px

	.video
		min-height 360px

	.no-pad
		padding 0px

	.pad
		padding 20px

	.code-img
		float right
		height 100%

	.full-row
		div.future
			padding-bottom 0px
			padding-right 0px
			padding-top 0px

			h3
				padding-top 7px
